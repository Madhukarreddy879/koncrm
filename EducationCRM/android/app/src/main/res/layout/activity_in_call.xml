<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18181B"
    tools:context=".dialer.InCallActivity">

    <!-- Top Section: Phone Number and Status -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="64dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Phone Number Display -->
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"
            tools:text="+1 234 567 8900" />

        <!-- Call Status -->
        <TextView
            android:id="@+id/tvCallStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#A1A1AA"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            tools:text="Calling..." />

        <!-- Call Duration Timer -->
        <TextView
            android:id="@+id/tvCallDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#10B981"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="00:42" />

    </LinearLayout>

    <!-- Recording Indicator -->
    <LinearLayout
        android:id="@+id/recordingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_call_button"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_recording"
            android:contentDescription="@string/recording_indicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/recording_indicator"
            android:textColor="#EF4444"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Call Control Buttons -->
    <LinearLayout
        android:id="@+id/callControlButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mute Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnMute"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_call_button"
                android:src="@drawable/ic_mic"
                android:contentDescription="@string/mute"
                android:scaleType="centerInside"
                android:padding="16dp" />

            <TextView
                android:id="@+id/tvMuteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/mute"
                android:textColor="#A1A1AA"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- End Call Button (Larger, Red) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnEndCall"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_end_call_button"
                android:src="@drawable/ic_call_end"
                android:contentDescription="@string/end_call"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:rotation="135" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/end_call"
                android:textColor="#A1A1AA"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Speaker Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnSpeaker"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_call_button"
                android:src="@drawable/ic_speaker"
                android:contentDescription="@string/speaker"
                android:scaleType="centerInside"
                android:padding="16dp" />

            <TextView
                android:id="@+id/tvSpeakerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/speaker"
                android:textColor="#A1A1AA"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
